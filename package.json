{
  "name": "manuscript-guard",
  "version": "1.0.0",
  "description": "Local-first manuscript version control",
  "main": "main.js",
  "author": "Jiajun Tang",
  "license": "MIT",
  "scripts": {
    "start": "vite",
    "dev": "concurrently -k \"cross-env BROWSER=none vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vue-tsc && vite build",
    "build:electron": "npm run build && electron-builder",
    "electron:start": "electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "electron-builder"
  },
  "dependencies": {
    "@google/genai": "*",
    "diff": "^8.0.3",
    "mammoth": "^1.11.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/diff": "^7.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "latest",
    "electron-builder": "latest",
    "tailwindcss": "^3.3.0",
    "terser": "^5.46.0",
    "vite": "^7.3.1",
    "vue-tsc": "latest",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.manuscriptguard.app",
    "productName": "ManuscriptGuard",
    "directories": {
      "output": "dist_electron",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "ManuscriptGuard"
    }
  }
}
