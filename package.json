{
  "name": "manuscript-guard",
  "version": "1.0.0",
  "description": "Local-first manuscript version control",
  "main": "main.js",
  "scripts": {
    "start": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "dev": "concurrently -k \"cross-env BROWSER=none vite\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:start": "electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "electron-builder"
  },
  "author": "Jiajun Tang",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "*",
    "@types/diff": "^7.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "diff": "^8.0.3",
    "mammoth": "^1.11.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^3.3.0",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.manuscriptguard.app",
    "productName": "ManuscriptGuard",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "main.js"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}